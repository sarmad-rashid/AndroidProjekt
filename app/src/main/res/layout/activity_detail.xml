<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey5"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DetailActivity">

        <TextView
            android:text="    Elevdetalier"
            android:background="@color/purple_700"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp">
                <TextView
                    android:text="Förnamn:"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/fornamnTextView"
                    android:text="förnamn"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp">
                <TextView
                    android:text="Efternamn:"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/efternamnTextView"
                    android:text="efternamn"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp">
                <TextView
                    android:text="Personnr:"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/pnummerTextView"
                    android:text="pnummer"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp">
                <TextView
                    android:text="Adress:"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/adressTextView"
                    android:text="adress"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp">
                <TextView
                    android:text="Telefonnr:"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/telefonnummerTextView"
                    android:text="telefonnr"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp">
                <TextView
                    android:text="Email:"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/emailTextView"
                    android:text="email"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnDelete"
            android:text="Radera person från listan"
            android:onClick="btnDelete_onClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
</LinearLayout>